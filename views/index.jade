doctype html
html
  head
    link(rel='stylesheet', href='/css/style.css')
    title #{title}
  body

    header.page-header
      h1 #{title}

    section#content.row
      form(action="").form-inline
        fieldset
          ol.clearfix
            li.form-group
              label(for="session-select").control-label Choose a session
              select(required autofocus)#session-select.form-control
                option(value="") &nbsp;
                each name in sessions
                  option(value="#{name}") #{name}
            li.form-group
              label(for="page-select").control-label Choose a role
              select(required disabled)#page-select.form-control
                option(value="") &nbsp;
                option(value="/editor") Editor
                option(value="/capture") Capture
                option(value="/redaction") Redaction
                option(value="/feedback") Feedback
            li.form-group
              input(value="GO" type="submit" disabled).btn.btn-default


    //- scripts
    script(src='/js/socket.io.min.js')
    script(src='/js/jquery-1.11.1.js')
    script(src='/bootstrap/dist/js/bootstrap.min.js')
    script(src='/js/minified/index.min.js')