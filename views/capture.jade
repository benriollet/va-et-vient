doctype html
html
  head
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans')
    link(rel='stylesheet', href='/css/style.css')
    script(src='/js/socket.io.min.js')
    script(src='/js/jquery-1.11.1.js')
    script(src='/js/capture.js')
    script var app = {}; app.session = "#{session}", app.column = "#{column}";
    title #{title}
    
  body
    header.page-header
      h1 #{title}
    div.row
      section#video.col-xs-9
        video#my_camera.isight(autoplay='autoplay')
      section#capture.col-xs-3
        form
          .btn-group
            .btn-group
              button(type='button', value='Capturer')#Snapshot.btn.btn-danger.btn-lg
                span.glyphicon.glyphicon-camera 
                |  Capturer
              button(type='button')#nextNote.btn.btn-success.btn-lg
                span.glyphicon.glyphicon-floppy-saved
                |  note suivante
          .result
      section
        ol#notes
          each note in notes
            if (!note.done)
              if (note.column == column)
                li(session="#{note.session}" column="#{note.column}" time="#{note.time}" text="#{note.text}" done="#{note.done}") #{note.text}